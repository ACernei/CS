@page
@model CsApp.Pages.Cipher.Polybius

@{
    ViewData["Title"] = "Polybius Cipher";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    Keyword:
    <input asp-for="PolybiusModel!.Keyword"/>
    <br/>
    Message:
    <input asp-for="PolybiusModel!.Message"/>
    <br/>
    <input type="submit" value="Encrypt" asp-page-handler="Encrypt"/>
    <input type="submit" value="Decrypt" asp-page-handler="Decrypt"/>
</form>
<p>
    Result: @Model.Message
</p>
