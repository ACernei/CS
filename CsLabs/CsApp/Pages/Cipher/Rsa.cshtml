@page
@model CsApp.Pages.Cipher.Rsa

@{
    ViewData["Title"] = "RSA Cipher";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    P:
    <input asp-for="RsaModel!.P"/>
    <br/>
    Q:
    <input asp-for="RsaModel!.Q"/>
    <br/>
    Message:
    <input asp-for="RsaModel!.Message"/>
    <br/>
    <input type="submit" value="Encrypt" asp-page-handler="Encrypt"/>
    <input type="submit" value="Decrypt" asp-page-handler="Decrypt"/>
</form>
<p>
    Result: @Model.Message
</p>
